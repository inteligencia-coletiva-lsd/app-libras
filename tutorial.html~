<script>
    var step = -1;
    function showStep(action) {
        $("#" + step).hide();

        if (action == 'next') {
            step = step + 1;
        }

        if (action == 'prev') {
            step = step - 1;
        }

        if (step == 0) {
            $("#prevBtn").hide();
            $("#nextBtn").show();
            $("#startContrib").hide();
        }
        else {
            $("#prevBtn").show();
        }

        if ( step == 1 ){
            $("#prevBtn").show();
            $("#nextBtn").show();
            $("#startContrib").hide();
        }else if (step == 2 ) {
            $("#prevBtn").show();
            $("#nextBtn").show();
            $("#startContrib").hide();
        }else if ( step == 3 ){
            $("#nextBtn").hide();
            $("#startContrib").show();
        }
        $("#" + step).show();
    }

    showStep('next');
    $("#modal").modal('show');
</script>
